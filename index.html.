<body>

<div class="container">
    <h1>üñãÔ∏è Moje Online Pr√≠behy</h1>
    
    <input type="text" id="title" placeholder="N√°zov pr√≠behu...">
    <textarea id="content" placeholder="Tu nap√≠≈° svoj pr√≠beh..."></textarea>
    <button onclick="saveStory()">Ulo≈æi≈• pr√≠beh</button>

    <div id="stories-container">
        </div>
</div>

<script>
    // Naƒç√≠tanie pr√≠behov pri otvoren√≠ str√°nky
    window.onload = displayStories;

    function saveStory() {
        const title = document.getElementById('title').value;
        const content = document.getElementById('content').value;

        if (!title || !content) {
            alert("Pros√≠m, vypl≈à n√°zov aj obsah!");
            return;
        }

        const story = { title, content, id: Date.now() };
        let stories = JSON.parse(localStorage.getItem('myStories')) || [];
        stories.push(story);
        
        localStorage.setItem('myStories', JSON.stringify(stories));
        
        // Vyƒçistenie pol√≠
        document.getElementById('title').value = '';
        document.getElementById('content').value = '';
        
        displayStories();
    }

    function displayStories() {
        const container = document.getElementById('stories-container');
        const stories = JSON.parse(localStorage.getItem('myStories')) || [];
        
        container.innerHTML = '<h2>Ulo≈æen√© texty</h2>';
        
        stories.reverse().forEach(story => {
            container.innerHTML += `
                <div class="story-card">
                    <h3>${story.title}</h3>
                    <p>${story.content.replace(/\n/g, '<br>')}</p>
                    <button class="delete-btn" onclick="deleteStory(${story.id})">Zmaza≈•</button>
                </div>
            `;
        });
    }

    function deleteStory(id) {
        let stories = JSON.parse(localStorage.getItem('myStories')) || [];
        stories = stories.filter(s => s.id !== id);
        localStorage.setItem('myStories', JSON.stringify(stories));
        displayStories();
    }
</script>

</body>
